rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ===== ADMIN USERS COLLECTION =====
    match /adminUsers/{adminId} {
      allow read, write: if request.auth != null && 
        isAdminUser();
    }
    
    // ===== USERS COLLECTION =====
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        isAdminUser()
      );
      allow write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // ===== INVOICES COLLECTION =====
    match /invoices/{invoiceId} {
      allow read, write: if request.auth != null && (
        // Users can read/write their own invoices
        request.auth.uid == resource.data.userId ||
        // Admins can read/write all invoices
        isAdminUser()
      );
      
      allow create: if request.auth != null && (
        // Users can create their own invoices
        request.auth.uid == request.resource.data.userId ||
        // Admins can create invoices for any user
        isAdminUser()
      );
    }

    // ===== CORE FUNCTIONS =====
    
    // Admin user verification
    function isAdminUser() {
      return request.auth != null && 
        (isSuperAdmin(request.auth.token.email) || 
         exists(/databases/$(database)/documents/adminUsers/$(request.auth.token.email)));
    }
    
    function isSuperAdmin(email) {
      return email in [
        'feveck.chris@gmail.com',
        'christopher.feveck@gmail.com'
      ];
    }
  }
}