rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ===== ADMIN USERS COLLECTION =====
    match /adminUsers/{adminId} {
      allow read, write: if isAdminUser();
    }
    
    // ===== ALL OTHER COLLECTIONS =====
    // Admins have full access to everything
    match /{document=**} {
      allow read, write: if request.auth != null && (
        // Users can access their own data
        request.auth.uid == resource.data.userId ||
        // Admins can access everything
        isAdminUser() ||
        // Allow creation of new documents
        request.auth.uid == request.resource.data.userId
      );
    }

    // ===== CORE FUNCTIONS =====
    function isAdminUser() {
      return request.auth != null && 
        (isSuperAdmin(request.auth.token.email) || 
         exists(/databases/$(database)/documents/adminUsers/$(request.auth.token.email)));
    }
    
    function isSuperAdmin(email) {
      return email in [
        'feveck.chris@gmail.com',
        'christopher.feveck@gmail.com'
      ];
    }
  }
}