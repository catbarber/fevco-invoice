rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ===== ADMIN USERS COLLECTION =====
    match /adminUsers/{adminId} {
      allow read, write: if isAdminUser();
    }
    
    // ===== CLIENTS COLLECTION =====
    match /clients/{clientId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        isAdminUser()
      );
      
      allow create: if request.auth != null && (
        request.auth.uid == request.resource.data.userId ||
        isAdminUser()
      );
      
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        isAdminUser()
      );
      
      allow delete: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        isAdminUser()
      );
    }
    
    // ===== INVOICES COLLECTION =====
    match /invoices/{invoiceId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        isAdminUser()
      );
      
      allow create: if request.auth != null && (
        request.auth.uid == request.resource.data.userId ||
        isAdminUser()
      );
      
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        isAdminUser()
      );
      
      allow delete: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        isAdminUser()
      );
    }
    
    // ===== USERS PROFILE COLLECTION =====
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == userId ||
        isAdminUser()
      );
    }
    
    // ===== SETTINGS COLLECTION =====
    match /settings/{settingId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        isAdminUser()
      );
    }
    
    // ===== REPORTS COLLECTION =====
    match /reports/{reportId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        isAdminUser()
      );
      
      allow write: if isAdminUser();
    }
    
    // ===== GENERAL CATCH-ALL RULE WITH RESTRICTIONS =====
    // This provides security for any new collections you might add
    match /{document=**} {
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdminUser()
      );
      
      allow write: if request.auth != null && (
        (request.resource.data.userId == request.auth.uid && 
         (!resource.exists || resource.data.userId == request.auth.uid)) ||
        isAdminUser()
      );
    }

    // ===== HELPER FUNCTIONS =====
    function isAdminUser() {
      return request.auth != null && 
        (isSuperAdmin(request.auth.token.email) || 
         exists(/databases/$(database)/documents/adminUsers/$(request.auth.uid)));
    }
    
    function isSuperAdmin(email) {
      return email in [
        'feveck.chris@gmail.com',
        'christopher.feveck@gmail.com'
      ];
    }
  }
}